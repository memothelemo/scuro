{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"target": "ES2019",
		"lib": ["ES2019"],
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"composite": true,
		"sourceMap": true,
		"outDir": "dist",
		"typeRoots": ["node_modules/@types"],

		"baseUrl": "src",
		"paths": {
			"*": ["*"]
		},

		"plugins": [
			{ "transform": "typescript-transform-paths" }
		]
	}
}